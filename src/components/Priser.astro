<div
  id="priser"
  class="bg-[#424548] w-full text-white flex flex-col items-center p-16 gap-y-20"
>
  <div class="flex flex-col items-center gap-4 w-full md:w-[80%] lg:w-2/3">
    <h2 class="text-xl md:text-2xl lg:text-3xl font-bold">Priser</h2>
    <p class="text-center text-xs md:text-sm lg:text-base">
      (Kort hår er når det er fritklippet ved ørene og langt hår er når det når
      under kæbelinien/hagen.)
    </p>
  </div>
  <div
    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 w-full md:w-[80%] gap-20 text-sm"
  >
    {
      Astro.props.priser.map((produkt) => (
        <div>
          {produkt.ekstraBesked ? (
            <div class="flex flex-col items-baseline gap-1">
              <h3 class="text-base md:text-lg lg:text-xl font-bold p-1">
                {produkt.titel}
              </h3>
              <p class="text-xs md:text-sm lg:text-base">
                ({produkt.ekstraBesked})
              </p>
            </div>
          ) : (
            <h3 class="text-base md:text-lg lg:text-xl font-bold p-1">
              {produkt.titel}
            </h3>
          )}
          <ul class="flex flex-col gap-3">
            {produkt.produkter.map((produkt) => (
              <li class="flex text-xs lg:text-sm justify-between border-b-[1px] p-1">
                <>
                  <p>{produkt[0]}</p>
                  <p>{produkt[1]} kr</p>
                </>
              </li>
            ))}
          </ul>
        </div>
      ))
    }
  </div>
</div>
