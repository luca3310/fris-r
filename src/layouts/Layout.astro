---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="keywords" content="Frisør og CND Shellac behandler." />
    <meta
      name="description"
      content="Frisør og CND Shellac behandler. Laver alt i hår: Opsætning, Exstension, Permanent, Farve og Reflekser. Samt CND Shellac farve og beskyttelse af dine negle."
    />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
