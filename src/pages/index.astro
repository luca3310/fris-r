---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Home from "../components/Top.astro";
import Aabningstider from "../components/Aabningstider.astro";
import Priser from "../components/Priser.astro";
import Banner from "../components/Banner.astro";
import Produkter from "../components/Produkter.astro";
import Footer from "../components/Footer.astro";
import priser from "../priser.json";
import tider from "../tider.json";
---

<Layout title="FrisÃ¸r / CND Shellac behandler">
  <main class="w-full">
    <Navigation />
    <Home />
    <Aabningstider tider={tider} />
    <Priser priser={priser} />
    <Banner />
    <Produkter />
    <Footer />
  </main>
</Layout>
<script>
  const nav = document.querySelector(".nav");
  const overlay = document.querySelector(".overlay");
  const openBtn = document.querySelector(".openBtn");
  const closeBtn = document.querySelector(".closeBtn");

  openBtn.addEventListener("click", () => {
    nav.classList.remove("translate-x-[100%]");
    overlay.classList.remove("hidden");
  });

  closeBtn.addEventListener("click", () => {
    nav.classList.add("translate-x-[100%]");
    overlay.classList.add("hidden");
  });

  window.addEventListener("hashchange", () => {
    nav.classList.add("translate-x-[100%]");
    overlay.classList.add("hidden");
  });

  overlay.addEventListener("click", () => {
    nav.classList.add("translate-x-[100%]");
    overlay.classList.add("hidden");
  });
</script>
